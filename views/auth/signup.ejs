<div class="signup-wrapper">
  <h2>Sign Up</h2>
  <form class="signup-form" action="/auth/signup" method="POST">
    <div class="form-input">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" placeholder="John Doe">
      </div>
    <div class="form-input">
      <label for="username">Username:</label>
      <input type="text" name="username" id="username" placeholder="JohnDoe">
    </div>
    <div class="form-input">
      <label for="password">Password:</label>
      <input type="password" name="password" id="password" placeholder="Password">
    </div>
    <div class="form-button signup-radio">
      <div class="signup-input">
        <input type="radio" name="role" id="role-student" value="student" />
        <label class="label-role" for="role-student">Student</label>
      </div>
      <div class="signup-input">
        <input type="radio" name="role" id="role-employer" value="employer" />
        <label class="label-role" for="role-employer">Employer</label>
      </div>
    </div>
    <% if (typeof(message) != "undefined") { %>
      <div class="form-input error"><p><%= message %></p></div>
    <% } %>
    <div class="form-button">
      <button class="btn-signup">Sign Up</button>
    </div>
  </form>
  <div>
    <span>You already have an account? <a href="/auth/login">Log In</a></span>
  </div>
</div>