<div class='job-details'>
    <div class='apply-position'>
        <h1><%= job.position %></h1>
    </div>
    <div class='apply-description'>
        <p><%= job.description %></p>
    </div>
    <div class='apply-owner'>
        <span class="bold">Published by: </span><%= job.owner.name %>
    </div>
</div>
<div class='apply-form'>
    <h2>Apply to this job:</h2>
    <form method="POST" action='/jobs/<%=job._id%>/apply'>
        <div class='form-textarea'>
            <textarea rows='15' cols='50' name='application'>Tell us a little bit about yourself.</textarea>
        </div>
        <div class='apply-button'>
            <button>Apply</button>
        </div>
    </form>
</div>
<span>Back to <a href="/jobs">Jobs</a></span>